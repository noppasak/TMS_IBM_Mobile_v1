<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:weightSum="1">


    <TextView
        android:id="@+id/lbltype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="รหัสผ่าน"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <Space
        android:layout_width="match_parent"

        android:layout_height="15dp" />

    <TextView
        android:id="@+id/lbluser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="รหัสรถ:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
    <Space
        android:layout_width="match_parent"

        android:layout_height="15dp" />

    <TextView
        android:id="@+id/lbldealer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="รหัสรถ:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <TextView
        android:id="@+id/lbldealer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="รหัสรถ:"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <EditText
        android:id="@+id/txtvin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="VIN Code"
        android:inputType="text" />

    <RadioGroup
        android:id="@+id/RClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </RadioGroup>


    <Button
        android:id="@+id/buttonScan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:text="สแกน Barcode VIN, Engine" />

    <Button
        android:id="@+id/buttonTripD"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="5dp"
        android:text="เช็ครถของ Dealer นี้" />
    <Button
        android:id="@+id/buttonInst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="5dp"
        android:text="ส่งข้อมูลรูปถ่ายขึ้น Server" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="5dp"
        android:text="ถัดไป" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="5dp"
        android:text="ย้อนกลับ" />

</LinearLayout>
</ScrollView>
