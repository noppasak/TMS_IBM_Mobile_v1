<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">


    <TextView
        android:id="@+id/lbltype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="รหัสผ่าน"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />


    <TextView
        android:id="@+id/lbluser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="รหัสรถ:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />


    <RadioGroup
        android:id="@+id/RClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </RadioGroup>



    <Button
        android:id="@+id/buttonStatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:text="เช็ค Status Fleet" />

    <Button
        android:id="@+id/buttonAddOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:text="เพิ่มข้อมูลการขนส่ง" />

    <Button
        android:id="@+id/buttonTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:text="Update ข้อมูลเวลา" />

    <Button
        android:id="@+id/buttonReload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:text="เชื่อมต่อกับ Server" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:text="ออกจากระบบ" />

</LinearLayout>